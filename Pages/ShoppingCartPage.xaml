<Page x:Class="StroyMaterials.Pages.ShoppingCartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StroyMaterials.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShoppingCartPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Пусто" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DataGrid x:Name="productGrid" AutoGenerateColumns="True">

        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Пункт выдачи" VerticalAlignment="Center"/>
            <ComboBox Width="200" x:Name="cbPoints"/>
        
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="150" Content="Оформить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
