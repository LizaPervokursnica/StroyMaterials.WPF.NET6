<Page x:Class="StroyMaterials.Pages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StroyMaterials.Pages" xmlns:elements="clr-namespace:StroyMaterials.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10 0 10 0">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <elements:SearchBox x:Name="SBox" Width="300"/>
                <elements:IconButton BtnIcon="{StaticResource add}" ToolTip="Добавить гостя" Width="60" MouseDown="AddToDb_Click" />
                <elements:IconButton BtnIcon="{StaticResource shoppingCart}" ToolTip="Корзина" Width="60" />
            </StackPanel>
        </Grid>
        <ListView x:Name="lvProduct" HorizontalAlignment="Center" 
                  ItemContainerStyle="{StaticResource ListViewItemWithoutSelection}" Margin="5" 
                  SelectionMode="Single" BorderThickness="0" Background="Transparent"  
                  Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Width="240" Height="240" Background="{StaticResource PrimaryBackgroundColor}" CornerRadius="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                           
                            <Image Source="/Assets/Pictures/emptyImage.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="30"/>
                            <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Height="15" Width="40" Margin="0 5 5 0">-->
                            <elements:IconButton x:Name="EditBtn" BtnIcon="{StaticResource edit}" Width="15" Height="15"/>
                            <elements:IconButton x:Name="DeleteBtn" BtnIcon="{StaticResource delete}" Width="15" Height="15"/>
                            <!--</StackPanel>-->
                           
                            <Rectangle SnapsToDevicePixels="True" RadiusX="15" RadiusY="15" Margin="5">
                                    <Rectangle.Fill>
                                    <ImageBrush Stretch="UniformToFill" ImageSource="{Binding ProductImage}">
                                    </ImageBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <Label FontSize="12" Margin="4 0 0 0" FontFamily="{StaticResource LableMontserratFont}" 
                                               Content="{Binding ProductName}"/>
                                        
                                    <TextBlock FontSize="12" Margin="4 0 0 0" FontFamily="{StaticResource LableMontserratFont}">
                                        <Run FontWeight="Bold" Text="Цена: "/>
                                        <Run Text="{Binding Сost}"/>
                                    </TextBlock>

                                    <TextBlock Foreground="{StaticResource TBoxSelectionBrush}" FontFamily="{StaticResource CustomTextFont}" 
                                                   Text="{Binding ProductDescription}" TextWrapping="Wrap" Height="30" Margin="10 0 0 0"/>
                                </StackPanel>
                                    <Button Content="В корзину" Style="{StaticResource AuthButton}" FontSize="10" FontFamily="{StaticResource LableMontserratFont}" Grid.Column="1" Height="30" Width="70"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    </Grid>
</Page>
